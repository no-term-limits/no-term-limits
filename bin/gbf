#!/usr/bin/env bash

function error_handler() {
  # code 141 is expected when exiting from no-pager
  if [[ "$2" != "141" ]]; then
    >&2 echo "Exited with BAD EXIT CODE '${2}' in ${0} script at line: ${1}."
    exit "$2"
  fi
}
trap 'error_handler ${LINENO} $?' ERR
set -o errtrace -o errexit -o nounset -o pipefail

# HELP: git: git branch files (gbf), gets files that have been modified by this branch relative to default branch

default_git_branch=$(basename $(git symbolic-ref refs/remotes/origin/HEAD))
git --no-pager diff --name-only --diff-filter=d --relative "origin/$default_git_branch" "$@"
