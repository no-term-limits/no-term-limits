#!/usr/bin/env bash

function error_handler() {
  >&2 echo "Exited with BAD EXIT CODE '${2}' in ${0} script at line: ${1}."
  exit "$2"
}
trap 'error_handler ${LINENO} $?' ERR
set -o errtrace -o errexit -o nounset -o pipefail

# HELP: takes a pattern and searches ~/.config/google-chrome for it to find the correct profile

profile_name="${1:-}"
if [[ -z "${1:-}" ]]; then
  echo >&2 "usage: $(basename "$0") [profile_name]"
  exit 1
fi

script_dir="$(
  cd -- "$(dirname "$0")" >/dev/null 2>&1
  pwd -P
)"

profile=""
config_file="${HOME}/.config/google-chrome/Local State"
if ${script_dir}/is_mac; then
  config_file="${HOME}/Library/Application Support/Google/Chrome/Local State"
fi
result=$(jq -r '.profile.info_cache | to_entries[] | select(.value.name == "'"$profile_name"'")' "$config_file")
if [[ -n "$result" ]]; then
  profile=$(jq -r .key <<<"$result")
fi
echo "$profile"
