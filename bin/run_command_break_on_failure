#!/usr/bin/env bash

set -e

# HELP: run a command until it fails. tries 3 times by default (set ATTEMPTS=100 or pass number as first arg)

if [[ -z "$ATTEMPTS" ]]; then
  attempts=3
else
  attempts=$ATTEMPTS
fi

if grep -qE '^[0-9]+$' <<<"${1:-}"; then
  attempts="$1"
  shift
fi

for i in $(eval "echo {1..$attempts}"); do
  echo "Starting attempt $i of $attempts"
  "$@"
  exitcode=$?
  echo "Attempt succeeded: $i of $attempts"

  if [ "$exitcode" != "0" ]; then
    break
  fi
done
